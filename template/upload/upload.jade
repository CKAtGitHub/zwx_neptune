div
   div(ng-repeat="file in vm.filesInfo",id="{{file.id}}")
      | {{file.name}} ({{file.formateSize}})
      b
         span(ng-if="file.percent > 0 && file.percent !==100") {{file.percent}}%
         span(ng-if="file.uploadState") {{file.uploadState}}
      div.progress
         div.progress-bar(style="width:{{2 * file.percent}}px",{{'aria-valuenow'}})
      div.close(ng-click="vm.removeFile(file)")
         | X
   br
   div#container
      button#selectfiles(type="button",class="btn btn-primary") 选择文件
      |&nbsp;
      button(type="button",class="btn btn-primary",ng-click="vm.startUpload()") 开始上传
   pre(ng-if="vm.errors.length > 0")
      div(ng-repeat="err in vm.errors")
         | {{err.file.name +' : '+err.message}}