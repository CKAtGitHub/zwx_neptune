extends ../layout/layout
block content
   script(src="/js/angular-filter.min.js")
   script(src="/js/formModule.js")
   script(src="/js/formly-integration.js")
   div(ng-app="formlyExample")
      div.page-header
         h1 Formly集成
      div(ng-controller="formlyExampleController as vm")
         div(ng-if='vm.loadingData.$$state.status === 0', style='margin:20px 0;font-size:2em')
            strong 正在加载...
         div(ng-if='vm.loadingData.$$status.state !== 0')
            form(ng-submit="vm.onSubmit()",name="vm.form",novalidate)
               formly-form(model="vm.model",fields="vm.fields",options="vm.options",form="vm.form")
                  button.btn.btn-primary(type="submit") 确定
                  button.btn.btn-default(type="button",ng-click="vm.options.resetModel()") 重置

