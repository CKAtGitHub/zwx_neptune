extends layout/layout
block content
    script(src="/js/formly-example.js")


    div(ng-app="formlyExample")
        script(type="text/ng-template",id="my-messages.html")
            formly-transclude
            div(ng-messages="fc.$error",ng-if="options.formControl.$touched")
                div(ng-message="{{::name}}",ng-repeat="(name,message) in ::options.validation.messages")
                    span {{message(fc.$viewValue, fc.$modelValue, this)}}


        div.page-header
            h1 Formly

        div(ng-controller="formlyExampleController as vm")
            form(ng-submit="vm.onSubmit()",novalidate)
                formly-form(model="vm.model",fields="vm.fields",form="vm.form",options="vm.options")
                    button.btn.btn-primary(type="submit") 确定
                    button.btn.btn-default(type="button",ng-click="vm.options.resetModel()") 重置

